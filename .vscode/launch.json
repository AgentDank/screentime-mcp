            "cwd": "${workspaceFolder}",
            "env": {
            },
            "args": [
            ]
        },
        {
            "name": "Attach screentime-mcp",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": 0,
        },   
        {
            "name": "Attach to Crush CLI",
            "type": "go",
